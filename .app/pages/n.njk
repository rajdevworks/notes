---
title: Notes
layout: "core/base.layout.njk"
permalink: "/n/"
panel: false
---

<main class="app-layout__main" id="app-content">
  <div class="page">
    <h1 class="page__title">Notes <small>({{ collections._notes.length }})</small></h1>
    <ul role="list" class="stack">
      {% for note in collections._notes %}
        {% if note.url !== '/' %}
          <li>
            <a href="{{ note.url }}" class="note-link">
              {{ note.data.title or note.page.fileSlug }}
            </a>
          </li>
        {% endif %}
      {% endfor %}
    </ul>
  </div>
</main>
